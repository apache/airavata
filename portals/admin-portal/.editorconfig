root = true

[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_size = 4

[*.html]
indent_size = 2

[*.{js,vue}]
indent_size = 2

[*.scss]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
indent_size = 2

# mkdocs Markdown parser requires 4 space indent
[docs/**.md]
indent_size = 4
