<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Sample Gateway</display-name>

    <!-- User database configurations -->
    <context-param>
        <param-name>jdbc.url</param-name>
        <param-value>jdbc:derby://localhost:20000/persistent_data;create=false</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.host</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.port</param-name>
        <param-value>20000</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.user</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.password</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc.driver</param-name>
        <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <!-- End of user database configurations -->

</web-app>

