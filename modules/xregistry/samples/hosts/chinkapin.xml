<HostDescription xmlns="http://www.extreme.indiana.edu/namespaces/2004/01/gFac"
            xmlns:lead="http://www.extreme.indiana.edu/lead">

    <documentInfo>
        <documentName targetNamespace="http://www.extreme.indiana.edu/lead">Chinkapin-1</documentName>
    </documentInfo>

    <!-- Name of the host -->
    <hostName>chinkapin.cs.indiana.edu</hostName>
    <hostConfiguration>

        <!-- gFacPath is required if you want to create services on this host using the factory
        provided with the generic service toolkit. You don't need this is you will be just running
        applications on this host-->
        <gFacPath>/l/extreme/local/packages/SecureGFac/default</gFacPath>

        <!-- Java 1.5 or later is required for creating services on this host -->
        <java>
            <name>java1.5</name>
            <version>1.5</version>
            <!-- Path to java 1.5 or later on this host -->
            <home>/u/drlead/packages/linux/jdk1.5.0_07</home>
        </java>
        <!-- Tmp directory where separate directories will be created for each run of the
        application. This directory will be used if the application description document does not
        have a tmp directory specified for the application. also log files of the services created
        on this host will be stored here. please make sure that this directory is world writeable
        and that it has enough space. -->
        <tmpDir>/tmp</tmpDir>

        <!-- If this host has a firewall, then services created on this host may not be accessible
        to the outside world. so you must specify a range of ports that are not blocked by the
        firewall. if there aren't any, contact your system admin. you cannot use reserved ports for
        this -->
        <portRange>
            <start>12346</start>
            <end>12446</end>
        </portRange>

    </hostConfiguration>
</HostDescription>
