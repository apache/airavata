                <axiom.version>1.2.8</axiom.version>
                <surefire.version>2.12</surefire.version>
                <jcr.version>2.0</jcr.version>
                <xmlbeans.version>2.5.0</xmlbeans.version>
                <xpp3.version>1.1.3_7</xpp3.version>

