            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>repository/services</outputDirectory>
            <includes>
                <include>org.apache.airavata:airavata-message-box:jar</include>
                <include>org.apache.airavata:airavata-message-broker:jar</include>
